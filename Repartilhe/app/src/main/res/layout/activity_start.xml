<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".StartActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/inLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="190dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/com_facebook_auth_dialog_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="124dp"
            android:layout_marginStart="126dp"
            android:text="Tem certeza?"
            android:textColor="@color/browser_actions_text_color"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="213dp"
            android:layout_height="37dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="61dp"
            android:layout_marginTop="7dp"
            android:text="Se você sair, todo o conteúdo será deletado."
            app:layout_constraintBottom_toTopOf="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/button4"
            android:layout_width="172dp"
            android:layout_height="55dp"
            android:width="1dp"
            android:background="@drawable/no"
            android:text="Yes"
            android:textColor="#ff3071"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button5"
            tools:layout_editor_absoluteY="76dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="166dp"
            android:layout_height="55dp"
            android:width="1dp"
            android:background="@drawable/no"
            android:text="No"
            android:textColor="@android:color/darker_gray"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="76dp" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/exitButton"
        android:layout_width="69dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:onClick="exitClicked"
        android:text="X"
        android:textColor="#a6a6a6"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="265dp"
        android:layout_height="185dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/proza_libre"
        android:text="Vamos Criar A Sua Nova Conta "
        android:textColor="@color/browser_actions_text_color"
        android:textSize="40sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/facebookButton"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="99dp"
        android:layout_marginStart="99dp"
        android:background="@drawable/button_shape_facebook"
        android:onClick="fbClicked"
        android:text="Entrar Com Facebook"
        android:textColor="@color/browser_actions_bg_grey"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="215dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/login_button_shape_enable"
        android:onClick="startClicked"
        android:text="Bora"
        android:textColor="@color/browser_actions_bg_grey"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="124dp"
        android:layout_marginStart="125dp"
        android:text="Já possui uma conta?"
        android:textColor="#939393"
        app:layout_constraintBottom_toTopOf="@+id/facebookButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>